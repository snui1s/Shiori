---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
}

const {
  title,
  description = "栞 Shiori - บันทึกความทรงจำและเรื่องราวที่น่าสนใจรอบตัว",
  image = "/image.png", // Default OG image
  canonicalURL = Astro.url.href,
  type = "website",
} = Astro.props;

const siteTitle = `${title} | Shiori 栞`;

import { getSession } from "auth-astro/server";
import { SignOut } from "auth-astro/components";
import { Toaster } from "react-hot-toast";
import { getOptimizedImageUrl } from "../lib/images";

const session = await getSession(Astro.request);

// Calculate user avatar URL with fallback
const userName = session?.user?.name || "User";
const fallbackAvatar = `https://ui-avatars.com/api/?name=${encodeURIComponent(userName)}&background=f63049&color=fff`;
const userAvatar =
  session?.user?.image && session.user.image !== ""
    ? getOptimizedImageUrl(session.user.image, 64) // Tiny for header
    : fallbackAvatar;
---

<!doctype html>
<html lang="th">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{siteTitle}</title>
    <meta name="title" content={siteTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={siteTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://res.cloudinary.com" />

    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;700;800&family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;1,400&family=IBM+Plex+Sans+Thai:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-7HMDPM75DV"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-7HMDPM75DV");
    </script>
  </head>
  <body>
    <Toaster
      client:load
      toastOptions={{
        style: {
          background: "rgba(30, 30, 30, 0.8)",
          backdropFilter: "blur(10px)",
          border: "1px solid rgba(255, 255, 255, 0.1)",
          color: "#fff",
          fontFamily: "var(--font-main)",
          borderRadius: "12px",
        },
        success: {
          iconTheme: {
            primary: "#4ade80",
            secondary: "black",
          },
        },
        error: {
          iconTheme: {
            primary: "#F63049",
            secondary: "white",
          },
        },
      }}
    />
    <div class="nav-wrapper">
      <div class="container">
        <nav class="glass nav-container">
          <div class="nav-content">
            <a href="/" class="logo">
              <div class="logo-icon-lantern">
                <div class="lantern-top"></div>
                <div class="lantern-body">
                  <div class="ribs"></div>
                  <div class="ribs"></div>
                </div>
                <div class="lantern-bottom"></div>
              </div>
              <span class="logo-en">Shiori</span>
            </a>
            <div class="nav-links">
              <div class="nav-desktop-links">
                <a href="/">หน้าแรก</a>
                <a href="/blog">รวมบันทึก</a>
              </div>

              <div class="auth-box">
                {
                  session ? (
                    <div class="user-dropdown" id="user-dropdown">
                      <button
                        class="user-avatar-btn"
                        id="dropdown-toggle"
                        aria-label="Toggle user menu"
                      >
                        <img
                          src={userAvatar}
                          alt={userName}
                          class="user-avatar"
                          referrerpolicy="no-referrer"
                          onerror={`this.onerror=null; this.src='${fallbackAvatar}';`}
                        />
                      </button>

                      <div class="dropdown-menu glass" id="dropdown-menu">
                        <div class="dropdown-user-info mobile-only">
                          <span class="user-name-small">
                            {session.user?.name}
                          </span>
                          <div class="divider-mini" />
                        </div>
                        <div class="mobile-nav-links mobile-only">
                          <a href="/">หน้าแรก</a>
                          <a href="/blog">รวมบันทึก</a>
                          <div class="divider-mini" />
                        </div>
                        <SignOut class="btn-logout-dropdown">
                          <span class="logout-text">Logout</span>
                        </SignOut>
                      </div>
                    </div>
                  ) : (
                    <a href="/login" class="btn-auth">
                      Login
                    </a>
                  )
                }
              </div>
            </div>
          </div>
        </nav>
      </div>
    </div>
    <main>
      <slot />
    </main>
    <footer class="footer">
      <div class="container">
        <div class="footer-links">
          <a href="/about">เกี่ยวกับผม</a>
          <span class="footer-dot">•</span>
          <a href="/">หน้าหลัก</a>
          <span class="footer-dot">•</span>
          <a href="/blog">รวมบันทึก</a>
        </div>
        <p>&copy; {new Date().getFullYear()} Shiori 栞. All rights reserved.</p>
      </div>
    </footer>

    <script is:inline>
      const toggle = document.getElementById("dropdown-toggle");
      const menu = document.getElementById("dropdown-menu");
      const dropdown = document.getElementById("user-dropdown");

      if (toggle && menu) {
        toggle.addEventListener("click", (e) => {
          e.stopPropagation();
          menu.classList.toggle("show");
        });

        document.addEventListener("click", (e) => {
          if (!dropdown?.contains(e.target)) {
            menu.classList.remove("show");
          }
        });
      }
    </script>
  </body>
</html>

<style>
  .nav-wrapper {
    position: sticky;
    top: 0;
    z-index: 1000;
    padding-top: 1rem;
    pointer-events: none;
  }
  .nav-container {
    pointer-events: auto;
    border-radius: 1.25rem;
    padding: 0 1.5rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }
  .logo {
    font-weight: 800;
    font-size: 1.5rem;
    letter-spacing: -0.05em;
    color: white;
    display: flex;
    align-items: center;
  }
  .logo-icon-lantern {
    width: 32px;
    height: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 1.2rem;
    position: relative;
    transition: all 0.3s ease;
    filter: drop-shadow(0 4px 10px rgba(246, 48, 73, 0.4));
  }
  .lantern-top,
  .lantern-bottom {
    width: 16px;
    height: 4px;
    background: #1a1a1a;
    border-radius: 2px;
  }
  .lantern-body {
    flex: 1;
    width: 28px;
    background: linear-gradient(to right, #f63049, #cc233b, #f63049);
    border-radius: 10px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    border: 1px solid rgba(0, 0, 0, 0.2);
    overflow: hidden;
  }
  .ribs {
    width: 100%;
    height: 1px;
    background: rgba(0, 0, 0, 0.4);
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  .logo:hover .logo-icon-lantern {
    filter: drop-shadow(0 0 20px rgba(246, 48, 73, 0.8));
    animation: swing 1s ease-in-out infinite alternate;
  }
  @keyframes swing {
    from {
      transform: rotate(-5deg) scale(1.1);
    }
    to {
      transform: rotate(15deg) scale(1.1);
    }
  }
  .logo-en {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 1rem;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    opacity: 0.8;
    color: white;
    transition: all 0.3s ease;
  }
  .logo:hover .logo-en {
    letter-spacing: 0.5em;
    opacity: 1;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  .nav-desktop-links {
    display: flex;
    gap: 2rem;
  }
  .nav-desktop-links a {
    color: var(--color-text-muted);
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }
  .nav-desktop-links a:hover {
    color: white;
  }
  .auth-box {
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    padding-left: 1.5rem;
    margin-left: 0.5rem;
    display: flex;
    align-items: center;
  }

  /* User Dropdown */
  .user-dropdown {
    position: relative;
    display: flex;
    align-items: center;
  }
  .user-avatar-btn {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    transition: transform 0.2s;
  }
  .user-avatar-btn:hover {
    transform: scale(1.05);
  }
  .user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 2px solid var(--color-primary);
    object-fit: cover;
  }
  .dropdown-menu {
    position: absolute;
    top: calc(100% + 15px);
    right: 0;
    min-width: 180px;
    padding: 0.75rem;
    display: none;
    flex-direction: column;
    gap: 0.5rem;
    z-index: 1001;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    animation: slideDown 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .dropdown-menu.show {
    display: flex;
  }
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .dropdown-menu a,
  .btn-logout-dropdown {
    padding: 0.6rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    transition: all 0.2s;
    text-decoration: none;
    text-align: left;
    width: 100%;
  }
  .dropdown-menu a:hover,
  .btn-logout-dropdown:hover {
    background: rgba(255, 255, 255, 0.05);
    color: white;
  }
  .btn-logout-dropdown {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
  }
  .logout-text {
    color: var(--color-primary);
    font-weight: 600;
  }
  .mobile-only {
    display: none;
  }
  .divider-mini {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0.25rem 0;
  }
  .user-name-small {
    padding: 0 1rem 0.25rem;
    font-size: 0.8rem;
    font-weight: 700;
    color: white;
    opacity: 0.6;
  }

  .auth-box .btn-auth {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-primary);
    color: white !important;
    padding: 0.5rem 1.2rem;
    border-radius: 2rem;
    font-weight: 600;
    font-size: 0.9rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    line-height: normal;
  }
  .auth-box .btn-auth:hover {
    background: var(--color-secondary);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(246, 48, 73, 0.4);
    color: white !important;
  }
  .user-profile {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .user-avatar-initial {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--color-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    font-family: var(--font-main);
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(246, 48, 73, 0.3);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  .user-info {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }
  .user-name {
    font-size: 0.85rem;
    font-weight: 600;
    color: white;
    max-width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .btn-auth-link {
    background: none;
    border: none;
    color: var(--color-text-muted);
    font-size: 0.75rem;
    padding: 0;
    cursor: pointer;
    text-align: left;
  }
  .btn-auth-link:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  main {
    min-height: 80vh;
    padding-top: 2rem;
  }
  .footer {
    padding: 4rem 1rem;
    text-align: center;
    color: var(--color-text-muted);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  .footer-links a:hover {
    color: white;
  }
  .footer-dot {
    opacity: 0.3;
  }
  .footer p {
    font-size: 0.85rem;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .nav-wrapper {
      position: sticky;
      top: 0;
      padding-top: 0.75rem;
    }
    .nav-container {
      padding: 0 1.25rem;
      border-radius: 3rem;
    }
    .nav-content {
      height: 3.5rem;
      flex-direction: row;
      justify-content: space-between;
    }
    .nav-desktop-links {
      display: none;
    }
    .auth-box {
      border-left: none;
      padding-left: 0;
      margin-left: 0;
    }
    .logo {
      display: flex;
    }
    .logo-en {
      display: none;
    }
    .logo-icon-lantern {
      margin-right: 0;
    }
    .mobile-only {
      display: flex;
      flex-direction: column;
    }
    .dropdown-menu {
      min-width: 150px;
    }
    main {
      padding-top: 1rem;
    }
  }

  @media (max-width: 400px) {
    .nav-links {
      gap: 0.5rem;
    }
  }
</style>
