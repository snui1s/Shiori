---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "栞 Shiori - Just a blog platform" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;700;800&family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;1,400&family=IBM+Plex+Sans+Thai:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="nav-wrapper">
      <div class="container">
        <nav class="glass nav-container">
          <div class="nav-content">
            <a href="/" class="logo">
              <div class="logo-icon-lantern">
                <div class="lantern-top"></div>
                <div class="lantern-body">
                  <div class="ribs"></div>
                  <div class="ribs"></div>
                </div>
                <div class="lantern-bottom"></div>
              </div>
              <span class="logo-en">Shiori</span>
            </a>
            <div class="nav-links">
              <a href="/">หน้าแรก</a>
              <a href="/blog">รวมบันทึก</a>
            </div>
          </div>
        </nav>
      </div>
    </div>
    <main>
      <slot />
    </main>
    <footer class="footer">
      <div class="container">
        <div class="footer-links">
          <a href="/about">เกี่ยวกับผม</a>
          <span class="footer-dot">•</span>
          <a href="/">หน้าหลัก</a>
          <span class="footer-dot">•</span>
          <a href="/blog">รวมบันทึก</a>
        </div>
        <p>&copy; {new Date().getFullYear()} Shiori 栞. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  .nav-wrapper {
    position: sticky;
    top: 0;
    z-index: 1000;
    padding-top: 1rem;
    pointer-events: none;
  }
  .nav-container {
    pointer-events: auto;
    border-radius: 1.25rem;
    padding: 0 1.5rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }
  .logo {
    font-weight: 800;
    font-size: 1.5rem;
    letter-spacing: -0.05em;
    color: white;
    display: flex;
    align-items: center;
  }
  .logo-icon-lantern {
    width: 32px;
    height: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 1.2rem;
    position: relative;
    transition: all 0.3s ease;
    filter: drop-shadow(0 4px 10px rgba(246, 48, 73, 0.4));
  }
  .lantern-top,
  .lantern-bottom {
    width: 16px;
    height: 4px;
    background: #1a1a1a;
    border-radius: 2px;
  }
  .lantern-body {
    flex: 1;
    width: 28px;
    background: linear-gradient(to right, #f63049, #cc233b, #f63049);
    border-radius: 10px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    border: 1px solid rgba(0, 0, 0, 0.2);
    overflow: hidden;
  }
  .ribs {
    width: 100%;
    height: 1px;
    background: rgba(0, 0, 0, 0.4);
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  .logo:hover .logo-icon-lantern {
    filter: drop-shadow(0 0 20px rgba(246, 48, 73, 0.8));
    animation: swing 1s ease-in-out infinite alternate;
  }
  @keyframes swing {
    from {
      transform: rotate(-5deg) scale(1.1);
    }
    to {
      transform: rotate(15deg) scale(1.1);
    }
  }
  .logo-en {
    font-family: var(--font-heading);
    font-weight: 300;
    font-size: 1rem;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    opacity: 0.8;
    color: white;
    transition: all 0.3s ease;
  }
  .logo:hover .logo-en {
    letter-spacing: 0.5em;
    opacity: 1;
  }
  .nav-links {
    display: flex;
    gap: 2rem;
  }
  .nav-links a {
    color: var(--color-text-muted);
    font-weight: 500;
  }
  .nav-links a:hover {
    color: white;
  }
  main {
    min-height: 80vh;
    padding-top: 2rem;
  }
  .footer {
    padding: 4rem 1rem;
    text-align: center;
    color: var(--color-text-muted);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  .footer-links a:hover {
    color: white;
  }
  .footer-dot {
    opacity: 0.3;
  }
  .footer p {
    font-size: 0.85rem;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .nav-wrapper {
      position: static;
      padding-top: 0.5rem;
    }
    .nav-container {
      padding: 0 1rem;
      border-radius: 1rem;
    }
    .nav-content {
      height: auto;
      padding: 1rem 0;
      flex-direction: column;
      gap: 1rem;
    }
    .nav-links {
      gap: 1.25rem;
      font-size: 0.9rem;
    }
    .logo {
      display: none; /* Hide entire logo on mobile */
    }
    main {
      padding-top: 1rem;
    }
  }

  /* Specific tweaks for 375px */
  @media (max-width: 400px) {
    .nav-links {
      gap: 0.75rem;
    }
  }
</style>
