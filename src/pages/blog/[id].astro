---
import Layout from "../../layouts/Layout.astro";
import { db, Post, eq } from "astro:db";

export async function getStaticPaths() {
  const posts = await db.select().from(Post);

  return posts.map((post) => ({
    params: { id: post.slug },
  }));
}

const { id } = Astro.params;

const [entry] = await db
  .select()
  .from(Post)
  .where(eq(Post.slug, id as string));

if (!entry) {
  return Astro.redirect("/404");
}

const post = {
  title: entry.title,
  excerpt: entry.excerpt,
  content: entry.content || "",
  date: new Date(entry.createdAt).toLocaleDateString("th-TH", {
    year: "numeric",
    month: "short",
    day: "numeric",
  }),
  category: entry.category,
  image:
    entry.imageUrl ||
    "https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e",
  author: entry.author,
};
---

<Layout title={`${post.title} | Shiori 栞`} description={post.excerpt || ""}>
  <article class="post-detail container">
    <header class="post-header">
      <span class="post-category">{post.category}</span>
      <h1 class="post-title h-gradient">{post.title}</h1>
      <div class="post-meta">
        <span>{post.date}</span>
        <span class="dot">•</span>
        <span>By {post.author}</span>
      </div>
    </header>

    <div class="post-hero-image glass">
      <img src={post.image} alt={post.title} />
    </div>

    <div class="post-content glass">
      <p class="lead">{post.excerpt}</p>
      <div class="rich-text-content" set:html={post.content} />
    </div>

    <footer class="post-footer">
      <a href="/" class="btn btn-outline">&larr; Back to Home</a>
    </footer>
  </article>
</Layout>

<style>
  .post-detail {
    padding: 4rem 0;
    max-width: 800px;
  }
  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .post-category {
    color: var(--color-primary);
    text-transform: uppercase;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }
  .post-title {
    font-size: 3.5rem;
    margin: 1rem 0;
    line-height: 1.1;
  }
  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  .dot {
    margin: 0 0.5rem;
  }

  .post-hero-image {
    width: 100%;
    height: 450px;
    margin-bottom: 3rem;
    overflow: hidden;
    border-radius: 2rem;
  }
  .post-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 3rem;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #e2e8f0;
  }
  .lead {
    font-size: 1.4rem;
    color: white;
    font-weight: 500;
    margin-bottom: 2rem;
  }
  h2 {
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
  }
  p {
    margin-bottom: 1.5rem;
  }
  blockquote {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    background: rgba(246, 48, 73, 0.1);
    border-radius: 0 1rem 1rem 0;
    font-size: 1.2rem;
  }

  .post-footer {
    margin-top: 4rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
  }

  .h-gradient {
    background: linear-gradient(to right, #fff, #a0aec0);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Rich Text Styles */
  .rich-text-content :global(h2) {
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
    color: white;
  }
  .rich-text-content :global(p) {
    margin-bottom: 1.5rem;
  }
  .rich-text-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    margin: 2rem 0;
  }
  .rich-text-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    background: rgba(246, 48, 73, 0.1);
    border-radius: 0 1rem 1rem 0;
    font-size: 1.2rem;
  }
  .rich-text-content :global(.embedded-asset) {
    margin: 2.5rem 0;
    text-align: center;
  }
  .rich-text-content :global(.embedded-asset img) {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  .rich-text-content :global(.asset-caption) {
    margin-top: 0.8rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
