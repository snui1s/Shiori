---
import Layout from "../../layouts/Layout.astro";
import { db, Post, eq } from "astro:db";
import { getSession } from "auth-astro/server";
import Comments from "../../components/Comments";

const session = await getSession(Astro.request);

export const prerender = false;

const { id } = Astro.params;

const [entry] = await db
  .select()
  .from(Post)
  .where(eq(Post.slug, id as string));

if (!entry) {
  return Astro.redirect("/404");
}

const post = {
  title: entry.title,
  excerpt: entry.excerpt,
  content: entry.content || "",
  date:
    new Date(entry.createdAt).toLocaleString("th-TH", {
      year: "numeric",
      month: "short",
      day: "numeric",
      hour: "2-digit",
      minute: "2-digit",
    }) + " น.",
  category: entry.category,
  image:
    entry.imageUrl ||
    "https://placehold.co/1200x600/1a1a1a/F63049?text=Image+Lost+in+Translation...",
  author: entry.author,
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.title,
  description: post.excerpt,
  image: post.image,
  author: {
    "@type": "Person",
    name: post.author,
  },
  datePublished: entry.createdAt.toISOString(),
  url: Astro.url.href,
};
---

<Layout
  title={post.title}
  description={post.excerpt || ""}
  image={post.image}
  type="article"
>
  <script is:inline>
    function handleDetailImageError(img) {
      img.onerror = null;
      img.src =
        "https://placehold.co/1200x600/1a1a1a/F63049?text=Image+Lost+in+Translation...";
    }
  </script>
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(jsonLd)}
  />
  <article class="post-detail container">
    <header class="post-header">
      <span class="post-category">{post.category}</span>
      <h1 class="post-title h-gradient">{post.title}</h1>
      <div class="post-meta">
        <div class="meta-left">
          <span>{post.date}</span>
          <span class="dot">•</span>
          <span>By {post.author}</span>
        </div>
      </div>
    </header>

    <style>
      .post-meta {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 1.5rem;
        color: var(--color-text-muted);
      }
    </style>

    <div class="post-hero-image glass">
      <img
        src={post.image}
        alt={post.title}
        width="1200"
        height="600"
        loading="eager"
        class="hero-img"
        onerror="this.onerror=null; this.src='https://placehold.co/1200x600/1a1a1a/F63049?text=Image+Lost+in+Translation...';"
      />
    </div>

    <div class="post-content glass">
      <p class="lead">{post.excerpt}</p>
      <div class="rich-text-content" set:html={post.content} />
    </div>

    <Comments client:load postId={entry.id} session={session} />

    <footer class="post-footer">
      <a href="/" class="btn-back">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        กลับหน้าหลัก
      </a>
    </footer>
  </article>
</Layout>

<style>
  .post-detail {
    padding: 4rem 1rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  .post-header {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .post-category {
    color: var(--color-primary);
    text-transform: uppercase;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }
  .post-title {
    font-size: 3.5rem;
    margin: 1rem 0;
    line-height: 1.1;
  }
  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  .dot {
    margin: 0 0.5rem;
  }

  .post-hero-image {
    width: 100%;
    max-width: 800px;
    height: 450px;
    margin: 0 auto 3rem;
    overflow: hidden;
    border-radius: 2rem;
  }
  .post-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 4rem;
    font-size: 1.15rem;
    line-height: 1.8;
    color: #e2e8f0;
    width: 100%;
  }
  .lead {
    font-size: 1.4rem;
    color: white;
    font-weight: 500;
    margin-bottom: 2rem;
  }
  h2 {
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
  }
  p {
    margin-bottom: 1.5rem;
  }
  blockquote {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    background: rgba(246, 48, 73, 0.1);
    border-radius: 0 1rem 1rem 0;
    font-size: 1.2rem;
  }

  .post-footer {
    margin-top: 6rem;
    padding-top: 4rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: center;
  }
  .btn-back {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 2.5rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3rem;
    color: white;
    font-weight: 600;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    text-decoration: none;
  }
  .btn-back:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(246, 48, 73, 0.3);
  }
  .btn-back svg {
    transition: transform 0.3s ease;
  }
  .btn-back:hover svg {
    transform: translateX(-5px);
  }

  .h-gradient {
    background: linear-gradient(to right, #fff, #a0aec0);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (max-width: 768px) {
    .post-detail {
      padding: 2rem 0.5rem;
    }
    .post-title {
      font-size: 2.2rem;
    }
    .post-hero-image {
      height: 250px;
      border-radius: 1rem;
    }
    .post-content {
      padding: 1.5rem;
      font-size: 1.05rem;
    }
    .lead {
      font-size: 1.15rem;
    }
    .rich-text-content :global(h2) {
      font-size: 1.6rem;
    }
  }

  @media (max-width: 400px) {
    .post-title {
      font-size: 1.8rem;
    }
  }

  /* Rich Text Styles */
  .rich-text-content :global(h2) {
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
    color: white;
  }
  .rich-text-content :global(p) {
    margin-bottom: 1.5rem;
  }
  .rich-text-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    margin: 2rem 0;
  }
  .rich-text-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    background: rgba(246, 48, 73, 0.1);
    border-radius: 0 1rem 1rem 0;
    font-size: 1.2rem;
  }
  .rich-text-content :global(.embedded-asset) {
    margin: 2.5rem 0;
    text-align: center;
  }
  .rich-text-content :global(.embedded-asset img) {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  .rich-text-content :global(.asset-caption) {
    margin-top: 0.8rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
