    width: 120px;
    color: var(--color-text-muted);
  }
  .post-title-main {
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 0.2rem;
  }
  .post-slug-sub {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    font-family: monospace;
  }
  .category-pill {
    background: rgba(246, 48, 73, 0.1);
    color: var(--color-primary);
    padding: 0.3rem 0.8rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 600;
  }
  .action-buttons {
    display: flex;
    gap: 0.8rem;
    justify-content: flex-end;
  }
  .action-btn {
    padding: 0.5rem 1rem;
    border-radius: 0.6rem;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.3s;
  }
  .action-btn.edit {
    background: rgba(255, 255, 255, 0.05);
    color: white;
  }
  .action-btn.edit:hover {
    background: white;
    color: black;
  }
  .action-btn.delete {
    background: rgba(246, 48, 73, 0.1);
    color: var(--color-primary);
    border: none;
    cursor: pointer;
  }
  .action-btn.delete:hover {
    background: var(--color-primary);
    color: white;
  }

  .fade-out {
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.3s ease-out;
  }

  .empty-dashboard {
    padding: 5rem;
    text-align: center;
    color: var(--color-text-muted);
  }

  /* Specific Layout for Login reused from original */
  .login-container {
    max-width: 420px;
    width: 100%;
    padding: 3rem;
    text-align: center;
    align-self: center;
    animation: fadeIn 0.6s ease-out;
  }
  .auth-message {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }
  .admin-input {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 1rem 1.2rem;
    border-radius: 0.8rem;
    outline: none;
    transition: all 0.3s;
    font-size: 1rem;
    text-align: center;
    width: 100%;
    margin-bottom: 1.2rem;
  }
  .btn-login {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 0.8rem;
    font-weight: 700;
    width: 100%;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
