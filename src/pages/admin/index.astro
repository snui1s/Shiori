    min-height: 80vh;
    display: flex;
    justify-content: center;
  }
  .admin-dashboard-layout {
    width: 100%;
    animation: fadeIn 0.5s ease-out;
  }
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }
  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  .btn-new {
    background: var(--color-primary);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 2rem;
    font-weight: 700;
    transition: all 0.3s;
