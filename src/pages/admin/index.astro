---
import Layout from "../../layouts/Layout.astro";
import Editor from "../../components/Editor";
import "../../styles/admin.css";

export const prerender = false;

// ในโหมด SSR เราสามารถทำ Auth ง่ายๆ ได้ที่นี่
const cookie = Astro.cookies.get("admin-auth");
const isAuthenticated = cookie?.value === import.meta.env.ADMIN_PASSWORD;

let error = "";

if (Astro.request.method === "POST" && !isAuthenticated) {
  const contentType = Astro.request.headers.get("content-type");
  if (
    contentType?.includes("application/x-www-form-urlencoded") ||
    contentType?.includes("multipart/form-data")
  ) {
    const formData = await Astro.request.formData();
    const password = formData.get("password")?.toString();

    if (!password) {
      error = "กรุณาใส่รหัสผ่านก่อนนะจ๊ะ";
    } else if (password === import.meta.env.ADMIN_PASSWORD) {
      Astro.cookies.set("admin-auth", password, { path: "/", httpOnly: true });
      return Astro.redirect("/admin");
    } else {
      error = "รหัสผ่านไม่ถูกต้อง ลองใหม่อีกทีนะ!";
    }
  }
}
---

<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"></script>

<Layout title="SHIORI Admin Dashboard">
  <div class="container admin-page">
    {
      !isAuthenticated ? (
        <div class="login-container glass">
          <h1 class="h-gradient">Admin Login</h1>
          <p class="login-subtitle">กรุณาใส่รหัสผ่านเพื่อเข้าสู่ระบบหลังบ้าน</p>

          {error && <div class="error-msg">{error}</div>}

          <form method="POST">
            <input
              type="password"
              name="password"
              placeholder="••••••••"
              class="admin-input"
            />
            <button type="submit" class="btn-login">
              เข้าสู่ระบบ
            </button>
          </form>
        </div>
      ) : (
        <div class="admin-dashboard-layout">
          <div class="admin-header">
            <div class="header-content">
              <h1 class="h-gradient">Shiori Admin 栞</h1>
              <p>เขียนอะไรใหม่ๆ ลงบันทึกกันเถอะ</p>
            </div>
            <a href="/" class="btn btn-outline">
              กลับหน้าหลัก
            </a>
          </div>
          <Editor client:load />
        </div>
      )
    }
  </div>
</Layout>

<style>
  .admin-dashboard-layout {
    width: 100%;
  }
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  .admin-header h1 {
    margin: 0;
  }
  .admin-page {
    padding: 60px 0;
    min-height: calc(100vh - 80px); /* หักลบความสูงของ Header ออกนิดหน่อย */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .login-container {
    max-width: 420px;
    width: 100%;
    padding: 3rem;
    text-align: center;
    animation: fadeIn 0.6s ease-out;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .login-container h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  .login-subtitle {
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
    font-size: 0.95rem;
  }
  .login-container form {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }
  .admin-input {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: white;
    padding: 1rem 1.2rem;
    border-radius: 0.8rem;
    outline: none;
    transition: all 0.3s;
    font-size: 1rem;
    text-align: center;
  }
  .admin-input:focus {
    border-color: var(--color-primary);
    background: rgba(255, 255, 255, 0.07);
    box-shadow: 0 0 20px rgba(246, 48, 73, 0.15);
  }
  .btn-login {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 0.8rem;
    font-weight: 700;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 4px 15px rgba(246, 48, 73, 0.3);
    position: relative;
    overflow: hidden;
  }
  .btn-login:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 25px rgba(246, 48, 73, 0.5);
  }
  .btn-login:active {
    transform: scale(0.98);
  }
  .error-msg {
    background: rgba(246, 48, 73, 0.1);
    color: #ff6b6b;
    padding: 0.8rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    border: 1px solid rgba(246, 48, 73, 0.2);
    animation: shake 0.4s ease-in-out;
  }
  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-5px);
    }
    75% {
      transform: translateX(5px);
    }
  }
</style>
