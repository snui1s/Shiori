    display: inline-flex;
    align-items: center;
    height: 42px; /* Set fixed height to ensure they match perfectly */
    box-sizing: border-box;
  }
  .btn-new:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(246, 48, 73, 0.5);
  }
  .btn-top-outline {
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-text-muted);
    padding: 0.8rem 1.5rem;
    border-radius: 2rem;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    height: 42px; /* Set fixed height to match */
    box-sizing: border-box;
  }
  .btn-top-outline:hover {
    border-color: white;
    color: white;
  }

  /* Table Styles */
  .posts-list {
    padding: 0;
    overflow: hidden;
    border-radius: 1.5rem;
  }
  .admin-table {
    width: 100%;
    border-collapse: collapse;
    text-align: left;
  }
