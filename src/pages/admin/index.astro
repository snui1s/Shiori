---
import Layout from "../../layouts/Layout.astro";
import { db, Post, desc } from "astro:db";
import "../../styles/admin.css";

import { getSession } from "auth-astro/server";
import { SignIn } from "auth-astro/components";

export const prerender = false;

// Auth Check
const session = await getSession(Astro.request);

// Logic: Check if logged in AND has admin role (or matches your specific email)
// For now, let's assume you as the first user will be the admin,
// or we check against a specific email.
const isAuthorized =
  session?.user &&
  (session.user.email === import.meta.env.ADMIN_EMAIL ||
    (session.user as any).role === "admin");

if (!isAuthorized && session) {
  // If logged in but not authorized, we might want to redirect to a "Not Allowed" page or home
  return Astro.redirect("/?error=unauthorized");
}

const posts = await db.select().from(Post).orderBy(desc(Post.createdAt));
---

<Layout title="Admin Dashboard | Shiori">
  <div class="container admin-page">
    {
      !isAuthorized ? (
        <div class="login-container glass">
          <h1 class="h-gradient">Admin Access</h1>
          <p class="auth-message">
            เฉพาะผู้ดูแลระบบเท่านั้นที่สามารถเข้าถึงส่วนนี้ได้
          </p>
          {!session ? (
            <SignIn provider="google" class="btn-login">
              Login with Google
            </SignIn>
          ) : (
            <div class="error-msg">ขออภัย บัญชีของคุณไม่มีสิทธิ์เข้าใช้งาน</div>
          )}
        </div>
      ) : (
        <div class="admin-dashboard-layout">
          <div class="admin-header">
            <div class="header-content">
              <h1 class="h-gradient">Dashboard 栞</h1>
              <p>จัดการความทรงจำทั้งหมดของคุณ</p>
            </div>
            <div class="header-actions">
              <a href="/admin/new" class="btn-new">
                + เขียนใหม่
              </a>
              <a href="/" class="btn-top-outline">
                กลับหน้าหลัก
              </a>
            </div>
          </div>

          <div class="posts-list glass">
            {posts.length === 0 ? (
              <div class="empty-dashboard">
                <h3>ยังไม่มีบันทึกใดๆ</h3>
                <p>มาเริ่มเขียนเรื่องแรกกันเถอะ!</p>
              </div>
            ) : (
              <table class="admin-table">
                <thead>
                  <tr>
                    <th>วันที่</th>
                    <th>หัวข้อ</th>
                    <th>หมวดหมู่</th>
                    <th class="actions-col">จัดการ</th>
                  </tr>
                </thead>
                <tbody>
                  {posts.map((post) => (
                    <tr id={`post-${post.slug}`}>
                      <td class="date-col">
                        {new Date(post.createdAt).toLocaleDateString("th-TH", {
                          day: "numeric",
                          month: "short",
                        })}
                      </td>
                      <td class="title-col">
                        <div class="post-title-main">{post.title}</div>
                        <div class="post-slug-sub">/{post.slug}</div>
                      </td>
                      <td>
                        <span class="category-pill">{post.category}</span>
                      </td>
                      <td class="actions-cell">
                        <div class="action-buttons">
                          <a
                            href={`/admin/edit/${post.slug}`}
                            class="action-btn edit"
                          >
                            แก้
                          </a>
                          <button
                            class="action-btn delete btn-delete"
                            data-slug={post.slug}
                          >
                            ลบ
                          </button>
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            )}
          </div>
        </div>
      )
    }
  </div>
</Layout>

<script>
  // Handle Delete
  const deleteButtons = document.querySelectorAll(".btn-delete");
  deleteButtons.forEach((btn) => {
    btn.addEventListener("click", async (e) => {
      const target = e.target as HTMLButtonElement;
      const slug = target.dataset.slug;
      if (
        confirm(
          `คุณต้องการลบโพสต์ "${slug}" ใช่หรือไม่? ไม่สามารถเรียกคืนได้นะ!`,
        )
      ) {
        target.innerText = "...";
        target.disabled = true;

        try {
          const res = await fetch(`/api/posts/${slug}`, { method: "DELETE" });
          if (res.ok) {
            document.getElementById(`post-${slug}`)?.classList.add("fade-out");
            setTimeout(() => {
              document.getElementById(`post-${slug}`)?.remove();
            }, 300);
          } else {
            alert("เกิดข้อผิดพลาดในการลบ");
            target.innerText = "ลบ";
            target.disabled = false;
          }
        } catch (err) {
          alert("เกิดข้อผิดพลาดในการเชื่อมต่อ");
          target.innerText = "ลบ";
          target.disabled = false;
        }
      }
    });
  });
</script>

<style>
