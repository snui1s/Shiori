import Layout from "../layouts/Layout.astro";
import { db, Post, desc } from "astro:db";
import { getOptimizedImageUrl } from "../lib/images";

const rawPosts = await db
  .select()
  .from(Post)
  .orderBy(desc(Post.createdAt))
  .limit(6);

