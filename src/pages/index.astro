  <style>
    .hero {
      position: relative;
      padding: 8rem 0 6rem;
      overflow: hidden;
    }
    .hero-content {
      position: relative;
      z-index: 10;
      text-align: center;
      max-width: 800px;
      margin-inline: auto;
    }
    .hero-title {
      font-size: 4rem;
      font-weight: 800;
      margin-bottom: 1.5rem;
      letter-spacing: -0.02em;
    }
    .hero-subtitle {
      font-size: 1.25rem;
      color: var(--color-text-muted);
      margin-bottom: 2.5rem;
    }
    .hero-actions {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
    }
    .hero-bg-accent {
      position: absolute;
      top: -10%;
      right: -10%;
      width: 40%;
      height: 60%;
      background: radial-gradient(
        circle,
        var(--color-accent) 0%,
        transparent 70%
      );
      opacity: 0.2;
      filter: blur(60px);
      z-index: 1;
    }

    .featured-section {
      padding: 4rem 0;
    }
    .section-header {
      margin-bottom: 3rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .section-title {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
    .title-line {
      width: 60px;
      height: 4px;
      background: var(--color-primary);
      border-radius: 2px;
    }

    .post-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
      margin-bottom: 6rem;
    }
    .post-card {
      overflow: hidden;
      transition:
        transform 0.3s ease,
        border-color 0.3s ease;
    }
    .post-card:hover {
      transform: translateY(-5px);
      border-color: var(--color-primary);
    }
    .post-image {
      height: 200px;
      overflow: hidden;
    }
    .post-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    .post-card:hover .post-image img {
      transform: scale(1.05);
    }
    .post-content {
      padding: 1.5rem;
    }
    .post-category {
      display: inline-block;
      color: var(--color-primary);
      font-weight: 600;
      font-size: 0.8rem;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }
    .post-title a {
      color: white;
    }
    .post-excerpt {
      color: var(--color-text-muted);
      font-size: 0.95rem;
      margin-top: 0.5rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .post-footer {
      margin-top: 1.5rem;
      display: flex;
      justify-content: space-between;
      font-size: 0.8rem;
      color: var(--color-text-muted);
    }

    .btn {
      padding: 0.8rem 2rem;
      border-radius: 0.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    .btn-primary {
      background: var(--color-primary);
      color: white;
    }
    .btn-primary:hover {
      background: var(--color-secondary);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px -10px var(--color-primary);
    }
    .btn-outline {
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: white;
    }
    .btn-outline:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: white;
    }

    .now-section {
      margin: 4rem 0 8rem;
    }
    .now-card {
      padding: 3rem;
      margin-inline: auto;
      max-width: 1000px;
      position: relative;
      overflow: hidden;
    }
    .now-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2.5rem;
      justify-content: center;
    }
    .now-header h2 {
      font-size: 2rem;
      margin: 0;
    }
    .pulse-icon {
      width: 12px;
      height: 12px;
      background: #4ade80;
      border-radius: 50%;
      position: relative;
      box-shadow: 0 0 10px #4ade80;
    }
    .pulse-icon::after {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 100%;
      background: #4ade80;
      border-radius: 50%;
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0% {
        width: 100%;
        height: 100%;
        opacity: 0.6;
      }
      100% {
        width: 300%;
        height: 300%;
        opacity: 0;
      }
    }
    .now-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
    .now-item {
      text-align: center;
      padding: 1.5rem;
      background: rgba(255, 255, 255, 0.03);
      border-radius: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.05);
      transition: transform 0.3s ease;
    }
    .now-item:hover {
      transform: translateY(-5px);
      background: rgba(255, 255, 255, 0.06);
    }
    .now-label {
      display: block;
      font-size: 0.85rem;
      color: var(--color-text-muted);
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }
    .now-value {
      font-size: 1.15rem;
      font-weight: 600;
      margin: 0;
      color: white;
    }
    .now-footer {
      margin-top: 2.5rem;
      text-align: center;
      font-size: 0.9rem;
      color: var(--color-text-muted);
      font-style: italic;
    }

    @media (max-width: 768px) {
      .now-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
