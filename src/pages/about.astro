<style>
  .about-section {
    padding: 8rem 0;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }
  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 5rem;
    align-items: center;
  }

  .about-image-container {
    position: relative;
  }
  .image-wrapper {
    padding: 1rem;
    border-radius: 2rem;
    overflow: hidden;
    transform: rotate(-3deg);
    transition: all 0.5s ease;
  }
  .about-image-container:hover .image-wrapper {
    transform: rotate(0deg) scale(1.02);
  }
  .profile-img {
    width: 100%;
    aspect-ratio: 4/5;
    object-fit: cover;
    border-radius: 1.5rem;
  }

  .experience-badge {
    position: absolute;
    bottom: -2rem;
    right: -2rem;
    padding: 1.5rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 1.5rem;
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 10;
    animation: floating 3s ease-in-out infinite;
  }
  @keyframes floating {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .badge-number {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-primary);
  }
  .badge-text {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .sub-title {
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.9rem;
  }
  .about-content h1 {
    font-size: 3.5rem;
    margin-top: 1rem;
    line-height: 1.1;
  }

  .bio-text {
    margin: 2.5rem 0;
  }
  .bio-text p {
    font-size: 1.15rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }
  .bio-text strong {
    color: white;
  }
  .thank-you {
    font-style: italic;
    border-left: 3px solid var(--color-primary);
    padding-left: 1.5rem;
    margin-top: 3rem !important;
  }

  .about-actions {
    display: flex;
    align-items: center;
    gap: 3rem;
  }
  .btn-primary {
    padding: 1rem 2.5rem;
    background: var(--color-primary);
    color: white;
    border-radius: 1rem;
    font-weight: 600;
    box-shadow: 0 10px 20px -10px var(--color-primary);
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  .dot-indicator {
    width: 8px;
    height: 8px;
    background: #4ade80;
    border-radius: 50%;
    box-shadow: 0 0 10px #4ade80;
  }

  @media (max-width: 968px) {
    .about-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .about-image-container {
      max-width: 400px;
      margin: 0 auto 4rem;
    }
    .experience-badge {
      right: 0;
    }
    .about-content h1 {
      font-size: 2.5rem;
    }
    .about-actions {
      flex-direction: column;
      gap: 1.5rem;
    }
    .thank-you {
      text-align: left;
    }
  }
</style>
